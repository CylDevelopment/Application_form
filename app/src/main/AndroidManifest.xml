        <activity
            android:name=".activities.Settings"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".UserProfile.EditProfileSettings"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.About"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".PanCard.FirstPage"
            android:windowSoftInputMode="adjustPan" />
